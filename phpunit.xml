<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="phpunit.php">
	<testsuites>
		<testsuite name="Spol/FSM">
			<directory suffix=".php">tests/</directory>
		</testsuite>
	</testsuites>

	<filter>
		<blacklist>
			<directory suffix=".php">tests</directory>
			<directory suffix=".php">vendor</directory>
		</blacklist>
		<whitelist>
			<directory suffix=".php">Spol</directory>
		</whitelist>
	</filter>
</phpunit>
